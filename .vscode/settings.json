{
    // Change default terminal
    "terminal.integrated.profiles.windows": {
        "CMD (venv)": {
            "path": "C:\\WINDOWS\\System32\\cmd.exe",
            "args": ["-k", "python", "-m", "pipenv", "shell"],
            "overrideName": true,
            "icon": "terminal-cmd"
        },
    },
    "terminal.integrated.cwd": "${workspaceFolder}",
    "terminal.integrated.defaultProfile.windows": "CMD (venv)",
    
    // Clear previous debug when starting a new run
    "debug.terminal.clearBeforeReusing": true,

    // Hides files from viewer for simplicity (does not use gitignore)
    "files.exclude": {
        "**/.c": true,
        "**/.pyd": true,
    },

    // Black formatter
    "black-formatter.args": ["--line-length", "100"]
}